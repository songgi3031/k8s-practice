apiVersion: batch/v1
kind: Job
metadata:
  name: two-containers
spec:
  template:
    spec:
      containers:
      - name: busybox 1
        image: busybox:1
        command: ["sh", "-c", "sleep 5; exit 0"]
      - name: busybox 2
        image: busybox:2
        command: ["sh", "-c", "sleep 5; exit 1"]
      restartPolicy: Never
   backoffLimit: 2
